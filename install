#!/bin/bash

usuario=$(whoami)

git clone https://aur.archlinux.org/yay-bin.git
cd yay-bin
makepkg -si --noconfirm

chmod +x install

sudo -u $usuario echo -e 'Section "InputClass"' > /etc/X11/xorg.conf.d/00-keyboard.conf
sudo -u $usuario echo -e 'Identifier "system-keyboard"' >> /etc/X11/xorg.conf.d/00-keyboard.conf
sudo -u $usuario echo -e 'MatchIsKeyboard "on"' >> /etc/X11/xorg.conf.d/00-keyboard.conf
sudo -u $usuario echo -e 'Option "XkbLayout" "latam"' >> /etc/X11/xorg.conf.d/00-keyboard.conf
sudo -u $usuario echo -e 'EndSection' >> /etc/X11/xorg.conf.d/00-keyboard.conf

